{
  "name": "koa-react-boilerplate",
  "version": "0.1.0",
  "description": "A fullstack Koa + React + Redux Universal Boilerplate to speed up your development process.",
  "main": "server/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./build/app.js",
    "postinstall": "npm run build",
    "dev": "cross-env NODE_ENV=development nodemon server/main.js -e js,pug,json,jsx --watch server",
    "build": "npm run clean-build && npm run build-server && npm run build-client",
    "build-server": "cross-env NODE_ENV=production babel server --out-dir build",
    "build-client": "cross-env NODE_ENV=production webpack --config ./webpack.prod.js",
    "clean-build": "trash build/ && mkdir build && ncp ./server/views/ ./build/views/",
    "lint": "eslint ./server/app.js"
  },
  "keywords": [
    "koa",
    "react",
    "boilerplate"
  ],
  "author": "lubien <lubien1996@gmail.com> (http://lubien.me)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lubien/koa-react-redux-universal-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/lubien/koa-react-redux-universal-boilerplate/issues"
  },
  "engines": {
    "node": "6.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "eslint": "^2.10.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "nodemon": "^1.9.2",
    "react-hot-loader": "^3.0.0-beta.2",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-module-alias": "^1.4.0",
    "babel-plugin-resolver": "0.0.7",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "cross-env": "^1.0.7",
    "dotenv": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.1.0",
    "koa-convert": "^1.2.0",
    "koa-generic-session": "^1.10.2",
    "koa-generic-session-mongo": "^0.2.5",
    "koa-passport": "^2.1.1",
    "koa-router": "^7.0.1",
    "koa-static2": "^0.1.1",
    "koa-views": "^5.0.1",
    "mongoose": "^4.4.17",
    "ncp": "^2.0.0",
    "passport-github": "^1.1.0",
    "pug": "^2.0.0-alpha7",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-helmet": "^3.1.0",
    "react-loader": "^2.4.0",
    "react-redux": "^4.4.5",
    "react-redux-loading-bar": "^2.0.2",
    "react-router": "^2.4.0",
    "react-router-redux": "^4.0.4",
    "redux": "^3.5.2",
    "redux-promise-middleware": "^3.0.0",
    "redux-thunk": "^2.1.0",
    "trash-cli": "^1.3.0",
    "webpack": "^1.13.0"
  }
}
